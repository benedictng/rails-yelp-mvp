<h1>Restaurants#index</h1>
<p>Find me in app/views/restaurants/index.html.erb</p>
<ol>
  <% @restaurants.each do |restaurant| %>
  <li>
    <p><%= restaurant.name %>(<%= restaurant.category %>)</p>
    <%= link_to 'More details', restaurant_path(restaurant) %>
    <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
    <%= link_to 'Delete', restaurant_path(restaurant), method: :delete %>
  </li>
  <% end %>
</ol>
